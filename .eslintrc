{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended",
    "@vue/typescript/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "plugins": [
  ],
  "ignorePatterns": [
    "**/vite*.ts",
    "**/stories/**.*",
    "**/*.config.js"
  ],
  "rules": {
    // off warn error
    "semi": "error",
    "vue/require-default-prop": "off",
    "@typescript-eslint/naming-convention": "off",
    "@typescript-eslint/no-explicit-any": "error",
    "quotes": ["error", "single"]
  },
  "overrides": [
    {
      "files": ["*.test.ts"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off"
      }
    }
  ]
}